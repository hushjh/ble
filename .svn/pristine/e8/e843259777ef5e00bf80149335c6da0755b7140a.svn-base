function blueChange(bflag){
	if(bflag){
		$("#linkble").removeClass("blue_p");
		$("#linkble").addClass("blue_p_active");
	}else{
		$("#linkble").removeClass("blue_p_active");
		$("#linkble").addClass("blue_p");
	}
}



