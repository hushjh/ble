function setRedraw(reurl){//先判断是是新打开画布，还是重设底图，然后在判断是否设置了底图
	bgsrc=reurl;
	
	if(imgindex==-1)	{//新打开画布，设置底图
		line=[];
		if(bgsrc){
			isbgpic=1;
			imageOjb.src=bgsrc;
			imageOjb.onload=function(){//图片加载完成再画出来
				reDraw();
			}		
		}else{
			isbgpic=0;
			reDraw();
		}
	}else{//更换底图
		var canpicid=imgid[imgindex];
		getLines(canpicid,mdurlBycanpicid);
		
		if(bgsrc){
			isbgpic=1;
			imageOjb.src=bgsrc;
			imageOjb.onload=function(){//图片加载完成再画出来
				reDraw();
			}	
		}else{
			isbgpic=0;
			reDraw();
		}
		
	}
	
}
