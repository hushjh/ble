<body>
	<div id="wrap">
		<div id="header">
			<i class="backBar back_lineIcon"></i>
			<span class="topbar_tit">产品动态</span>
		</div>
		
	</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
	apiready = function(){
		
		UIScrollPicture = api.require('UIScrollPicture');
		openScrPic();
		
	};
	
	//打开轮播图
	function openScrPic(){
		var w=api.winWidth;
		var h=api.winHeight;
		UIScrollPicture.open({
		    rect: {
		        x: 40,
		        y: 2,
		        w: w-2,
		        h: h-2
		    },
		    data: {
		        paths: ['widget://image/product/product1.png', 'widget://image/product/product2.png', 'widget://image/product/product3.png'],
		        captions: []
		    },
		    styles: {
		        caption: {
		            height: 35,
		            color: '#E0FFFF',
		            size: 13,
		            bgColor: '#696969',
		            position: 'bottom'
		        },
		        indicator: {
		            align: 'center',
		            color: '#FFFFFF',
		            activeColor: '#DA70D6'
		        }
		    },
		    placeholderImg: 'widget://image/product/product1.png',
		    contentMode: 'scaleToFill',
		    interval: 3,
		    loop: true,
		    fixedOn: 'main',
		    fixed: false
		},function( ret, err ){
		    if( ret ){
		         //alert( JSON.stringify( ret ) );
		    }else{
		         alert( JSON.stringify( err ) );
		    }
		});
	}
	
	//头部返回导航
$(".back_lineIcon").click(function(){
	api.openWin({
		name : 'index',
		url : '../index.html',
	});
});
</script>
</html>