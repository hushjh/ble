function imgTobase64(url){
	var base64;
	trans.decodeImgToBase64({
	    imgPath: url
	}, function(ret, err){        
	    if( ret.status ){
	       // alert( JSON.stringify( ret ) );
	        base64=ret.base64Str;
	    }else{
	        alert( JSON.stringify( err ) );
	    }
	});
	alert("base64:"+base64);
	return base64;
}



